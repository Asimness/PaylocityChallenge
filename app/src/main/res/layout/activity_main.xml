<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/paylocity_challenge_main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/paylocity_logo"
        android:layout_marginBottom="96dp"
        app:layout_constraintStart_toStartOf="@id/paylocity_challenge_main_activity"
        app:layout_constraintEnd_toEndOf="@id/paylocity_challenge_main_activity"
        app:layout_constraintBottom_toTopOf="@id/calculate_employee_benefits_button"
        app:layout_constraintTop_toTopOf="@id/paylocity_challenge_main_activity"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/calculate_employee_benefits_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:text="@string/calculate_employee_benefits"
        android:textSize="@dimen/calculate_benefits_button_text"
        app:cornerRadius="8dp"
        app:rippleColor="@color/colorPrimaryDark"
        android:onClick="onClickStartEmployeeInformationActivity"
        app:layout_constraintStart_toStartOf="@id/paylocity_challenge_main_activity"
        app:layout_constraintEnd_toEndOf="@id/paylocity_challenge_main_activity"
        app:layout_constraintBottom_toBottomOf="@id/paylocity_challenge_main_activity"/>

</androidx.constraintlayout.widget.ConstraintLayout>